server {
    listen 82;

    server_name {{ ansible_ssh_host }};

    location / {
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:9090;
    }
}

server {
    listen 81;

    server_name {{ ansible_ssh_host }};

    location / {
        proxy_pass http://127.0.0.1:3000;
    }
}