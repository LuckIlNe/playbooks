server {
    listen 80;

    server_name {{ ansible_ssh_host }};

    root /var/www/wordpress;
    index index.php;


    location / {
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:8080;
    }

    location ~ /\. {
        deny all;
    }
}